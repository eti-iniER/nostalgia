nostalgia.eti-ini.me {
    # Handle API requests
    handle /api/* {
        reverse_proxy django:8000
    }

    # Handle Django admin static and media files
    handle /static/* /media/* {
        reverse_proxy django:8000
    }

    # Fallback for SPA routes
    handle {
        root * /usr/share/caddy
        try_files {path} /index.html
        file_server
    }
}
